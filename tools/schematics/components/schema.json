{
  "$schema": "http://json-schema.org/schema",
  "id": "components",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of component",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": {
        "message": "Name of your component",
        "type": "string"
      }
    },

    "kind": {
      "type": "string",
      "description": "What kind of component do you want?",
      "x-prompt": {
        "message": "What type of component do you want?",
        "type": "list",
        "items": [
          {
            "value": "builder",
            "label": "With builder"
          },
          {
            "value": "nobuilder",
            "label": "No builder"
          }
        ]
      }
    }
  },
  "required": ["name", "kind"]
}
