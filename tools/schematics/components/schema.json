{
  "$schema": "http://json-schema.org/schema",
  "id": "components",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of component",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "service": {
      "type": "boolean",
      "description": "Add an app for the domain?",
      "default": true
    },
    "builder": {
      "type": "boolean",
      "description": "Add a builder"
    }
  },
  "required": ["name", "builder"]
}
